%h1= "Ruby on Rails Portfolio Items"
= link_to "Add a Portfolio Item", new_portfolio_path if logged_in?(:site_admin)
- @ruby_on_rails_portfolio_items.each do |portfolio_item|
  %div
    %h2= = link_to portfolio_item.title, portfolio_show_path(portfolio_item)
    %p= portfolio_item.subtitle
    = image_tag portfolio_item.thumb_image, :alt => portfolio_item.title
    %div= portfolio_item.body
    %p= link_to "Edit Item", edit_portfolio_path(portfolio_item) if logged_in?(:site_admin)
    %p= link_to "Delete Item", portfolio_item, :method => :delete, :data => {:confirm => "Are you sure you want to delete that portfolio item?"} if logged_in?(:site_admin)
    