= form_for @portfolio_item do |f|
  - if @portfolio_item.errors.any?
    - @portfolio_item.errors.full_messages.each do |error|
      = alert_generator error, :error, "Error"
  %br
  %br
  %br
  %br
  %br
  %br
  %div
    = f.label :title
    = f.text_field :title, rows: 4, cols: 80
  %div
    = f.label :subtitle
    = f.text_field :subtitle, rows: 4, cols: 80
  %div
    = f.label :main_image, "Main Image URL"
    = f.text_field :main_image
  %div
    = f.label :thumb_image, "Thumbnail Image URL"
    = f.text_field :thumb_image
  %div
    = f.label :body
    = f.text_area :body, :rows => 13
  %div
    = f.submit
